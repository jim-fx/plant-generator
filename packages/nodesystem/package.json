{
  "name": "@plantarium/nodesystem",
  "author": "Max Richter",
  "license": "MIT",
  "version": "0.0.9",
  "description": "Package to do blender type node stuff in the browser.",
  "main": "public/dist/index.js",
  "module": "public/dist/index.esm.js",
  "browser": "public/dist/index.umd.js",
  "types": "public/dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "build": "microbundle --css-modules false --compress false",
    "dev": "microbundle watch --compress false --external none --format es --css-modules false",
    "build:example": "microbundle --external none --format es",
    "build:docs": "typedoc --ignoreCompilerErrors src/index.ts",
    "build:test": "env NODE_ENV=test yarn build:example && unset NODE_ENV",
    "cy:run": "wait-on http://localhost:8081 && yarn cypress run",
    "cy:open": "wait-on http://localhost:8081 && yarn cypress open",
    "clean": "rm -rf public/dist public/docs coverage .nyc_ouput .rts2_cache* jest-coverage cypress-coverage reports",
    "lint": "eslint 'src/**/*.ts'",
    "serve": "live-server public --quiet --port=8081",
    "test": "yarn build:test && run-p --race serve cy:run",
    "dev:serve": "run-p --race dev serve"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^2.0.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@zerollup/ts-transform-paths": "^1.7.17",
    "babel-plugin-istanbul": "^6.0.0",
    "cypress": "^4.3.0",
    "cz-conventional-changelog": "3.1.0",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "live-server": "^1.2.1",
    "microbundle": "^0.12.0-next.8",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.0",
    "ttypescript": "^1.5.10",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.1"
  },
  "files": [
    "public"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "report-dir": "public/cov/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "@plantarium/helpers": "^0.0.0",
    "@plantarium/types": "^0.0.0",
    "settings-ui": "^1.3.2"
  }
}
