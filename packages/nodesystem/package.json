{
  "name": "@plantarium/nodesystem",
  "version": "1.0.0",
  "main": "src/index.ts",
  "source": "src/index.ts",
  "keywords": [
    "procedural",
    "ui",
    "math",
    "nodes"
  ],
  "license": "MIT",
  "styles": "./public/dist/index.esm.css",
  "types": "./public/dist/index.d.ts",
  "exports": {
    "import": "./public/dist/index.esm.js"
  },
  "scripts": {
    "clean": "rimraf coverage .nyc_output public-test public/dist",
    "build": "node build.js && pnpm build:types",
    "build:test": "pnpm build && cp -r public public-test && nyc instrument public/dist public-test/dist",
    "build:types": "tsc",
    "dev": "node build.js --dev",
    "serve": "sirv public-test -p 8084",
    "test": "pnpm build:test && run-p --race serve cy:run",
    "cy:run": "wait-on http-get://localhost:8084 && pnpm cypress run",
    "cy:open": "wait-on http-get://localhost:8084 && pnpm cypress open",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@plantarium/helpers": "link:../helpers",
    "@plantarium/ui": "link:../ui",
    "panzoom": "^9.4.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.10",
    "@es-pack/esbuild-sass-plugin": "^1.0.4",
    "cypress": "^8.2.0",
    "esbuild": "^0.12.18",
    "esbuild-svelte": "^0.5.3",
    "npm-run-all": "^4.1.5",
    "sirv-cli": "^1.0.12",
    "source-map-support": "^0.5.19",
    "svelte-preprocess": "^4.7.4",
    "typescript": "^4.3.5",
    "wait-on": "^6.0.0"
  }
}
