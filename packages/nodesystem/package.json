  "dependencies": {
    "@plantarium/helpers": "link:../helpers",
    "@plantarium/ui": "link:../ui"
  },
  "devDependencies": {
    "@es-pack/esbuild-sass-plugin": "^1.0.4",
    "cypress": "^8.2.0",
    "esbuild": "^0.12.18",
    "esbuild-svelte": "^0.5.3",
    "npm-run-all": "^4.1.5",
    "svelte-preprocess": "^4.7.4",
    "wait-on": "^6.0.0"
  }
}
