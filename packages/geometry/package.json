{
  "name": "@plantarium/geometry",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --format=esm --outdir=public/dist && pnpm build:types",
    "build:types": "tsc && pnpm bundle:types",
    "dev:build": "esbuild src/index.ts --bundle --format=esm --outdir=public/dist --servedir=public --serve=8082",
    "dev:types": "tsc-watch --noClear --onSuccess 'pnpm bundle:types'",
    "dev": "run-p dev:build dev:types",
    "bundle:types": "dts-bundle --main public/dist/index.d.ts --name geometry --out bundle.d.ts",
    "clean": "rimraf coverage .nyc_output public/dist",
    "lint": "eslint src/**/*"
  },
  "dependencies": {
    "@plantarium/helpers": "link:../helpers",
    "gl-matrix": "^3.3.0",
    "ogl": "^0.0.73",
    "open-simplex-noise": "^2.5.0"
  },
  "devDependencies": {
    "dts-bundle": "^0.7.3",
    "esbuild": "^0.12.18",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  }
}
